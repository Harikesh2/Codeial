<html>
    <head><title><%= title %> </title></head>
    <body>
        <h1> Codeial profile <%= title %></h1>
    </body>
</html> 

<section id="feed-posts">
    <h4>Posts</h4>
    <form action="" id="new-post-form" method="POST">
        <textarea name="content" id="" cols="30" rows="3"></textarea>
        <input type="submit" value="POST">
    </form>
    <div id="Post-list-container">
        <ul>
            <% for(post of posts){ %>
                <li>
                   <% post.content %> 
                </li>


            <% } %>
             <small>
                <%= post.user.name %>
             </small>
             <div class="post-comments">
                    <% if (local.user) {%>
                        <form action="/comments/creates" method="POST">
                            <input type="text" name="content" placeholder="type here to comments...">
                            <input type="hidden" name="post" value="<%= post._id %> ">
                            <input type="submit" value="add comments">
                        </form>
                        
                        <%}%>
             </div>
            
        </ul>
    </div>
</section>